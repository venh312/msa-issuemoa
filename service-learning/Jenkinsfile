pipeline {
    agent any
    
    environment {
        JAVA_HOME = "/usr/lib/jvm/java-17-openjdk-amd64"
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Git Clone
                    git branch: "main", credentialsId: "conf-git", url: "https://github.com/venh312/msa-issuemoa.git"
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    sh "chmod 777 gradlew"
                    sh "./gradlew clean build"
                }
            }
        }
        stage('Docker Image Build') {
            steps {
                dir('service-learning') {
                    sh "docker build -t msa-issuemoa-learning ."
                }
            }
        }
        stage('Docker Run Container') {
            steps {
                script {
                    def containerRunning = sh(script: 'docker inspect -f \'{{.State.Running}}\' msa-issuemoa-learning 2>/dev/null', returnStatus: true) == 0
                    // ì»¨í…Œì´ë„ˆê°€ ì´ë¯¸ ì‹¤í–‰ì¤‘ì´ë©´ ì¢…ë£Œ ë° ì‚­ì œ
                    if (containerRunning) {
                        echo 'Container is already running'
                        sh "docker stop msa-issuemoa-learning"
                        sh "docker rm msa-issuemoa-learning"
                    }
                    
                    sh "docker run -d --name msa-issuemoa-learning -p 37080:37080 -v /home/venh/logs:/var/log --network issuemoa -e TZ=Asia/Seoul msa-issuemoa-learning"
                }
            }
        }
    }

    post {
        success {
            script {
                // ì„±ê³µì ì¸ ë¹Œë“œì¼ ë•Œ ì‹¤í–‰
                def commitMessage = sh(script: "git log -1 --pretty=%B", returnStdout: true).trim()

                slackSend (
                    channel: '#ì´ìŠˆëª¨ì•„', 
                    color: '#0100FF', 
                    message: "ğŸ˜„ ì´ìŠˆëª¨ì•„ Build & Release ì„±ê³µ! \n ğŸ’» ${commitMessage} \n ${env.JOB_NAME},  buildNumber: [${env.BUILD_NUMBER}]"
                )
            }
        }
        
        failure {
            script {
                // ë¹Œë“œ ì‹¤íŒ¨ ì‹œ ì‹¤í–‰
                def commitMessage = sh(script: "git log -1 --pretty=%B", returnStdout: true).trim()
                echo "Git Commit Message: ${commitMessage}"

                slackSend (
                    channel: '#ì´ìŠˆëª¨ì•„', 
                    color: '#FF0000', 
                    message: "ğŸ˜± ì´ìŠˆëª¨ì•„ Build & Release ì‹¤íŒ¨! \n ğŸ’» ${commitMessage} \n ${env.JOB_NAME},  buildNumber: [${env.BUILD_NUMBER}]"
                )
            }
        }
    }
}
