pipeline {
    agent any
    
    environment {
        JAVA_HOME = "/usr/lib/jvm/java-17-openjdk-amd64"
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    git branch: "main", credentialsId: "conf-git", url: "https://github.com/venh312/msa-issuemoa.git"
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    sh "chmod 777 gradlew"
                    sh "./gradlew clean build"
                }
            }
        }
        stage('Docker Image Build') {
            steps {
                dir('service-batch') {
                    sh "docker build -t msa-issuemoa-batch ."
                }
            }
        }
        stage('Docker Run Container') {
            steps {
                script {
                    def containerRunning = sh(script: 'docker inspect -f \'{{.State.Running}}\' msa-issuemoa-batch 2>/dev/null', returnStatus: true) == 0

                    if (containerRunning) {
                        echo 'Container is already running'
                        sh "docker stop msa-issuemoa-batch"
                        sh "docker rm msa-issuemoa-batch"
                    }
                    
                    sh "docker run -d --name msa-issuemoa-batch -p 20010:20010 -v /home/venh/logs:/var/log --network issuemoa msa-issuemoa-batch"
                }
            }
        }
    }

    post {
        success {
            script {
                // ì„±ê³µì ì¸ ë¹Œë“œì¼ ë•Œ ì‹¤í–‰
                def commitMessage = sh(script: "git log -1 --pretty=%B", returnStdout: true).trim()

                slackSend (
                    channel: '#ì´ìŠˆëª¨ì•„', 
                    color: '#0100FF', 
                    message: "ğŸ˜„ ì´ìŠˆëª¨ì•„ Build & Release ì„±ê³µ! \n ğŸ’» ${commitMessage} \n ${env.JOB_NAME},  buildNumber: [${env.BUILD_NUMBER}]"
                )
            }
        }
        
        failure {
            script {
                // ë¹Œë“œ ì‹¤íŒ¨ ì‹œ ì‹¤í–‰
                def commitMessage = sh(script: "git log -1 --pretty=%B", returnStdout: true).trim()

                slackSend (
                    channel: '#ì´ìŠˆëª¨ì•„', 
                    color: '#FF0000', 
                    message: "ğŸ˜± ì´ìŠˆëª¨ì•„ Build & Release ì‹¤íŒ¨! \n ğŸ’» ${commitMessage} \n ${env.JOB_NAME},  buildNumber: [${env.BUILD_NUMBER}]"
                )
            }
        }
    }
}
